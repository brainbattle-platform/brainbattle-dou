{
  "name": "brainbattle-duo-service",
  "version": "0.0.1",
  "description": "BrainBattle Duo microservice (Duolingo-style learning) with 10 modules.",
  "scripts": {
    "start": "ts-node -r tsconfig-paths/register src/main.ts",
    "start:dev": "nodemon --watch 'src/**/*.ts' --exec ts-node -r tsconfig-paths/register src/main.ts",
    "build": "tsc -p tsconfig.build.json",
    "seed:listening": "ts-node -r tsconfig-paths/register prisma/seed-listening-content.ts",
    "seed:b1": "ts-node -r tsconfig-paths/register prisma/seed-b1-reading-writing.ts",
    "check:seeded": "ts-node -r tsconfig-paths/register prisma/check-seeded.ts"
  },
  "dependencies": {
    "@nestjs/common": "^10.0.0",
    "@nestjs/core": "^10.0.0",
    "@nestjs/platform-express": "^10.0.0",
    "@nestjs/swagger": "^7.0.0",
    "@nestjs/config": "^3.0.0",
    "@aws-sdk/client-s3": "^3.700.0",
    "@prisma/client": "^6.19.1",
    "axios": "^1.7.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "prisma": "^6.19.1",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.8.0"
  },
  "devDependencies": {
    "@types/multer": "^2.0.0",
    "@types/node": "^20.0.0",
    "nodemon": "^3.0.0",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.6.0"
  }
}
